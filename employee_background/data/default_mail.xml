<odoo>
    <data>
        <record id="assign_agency_email_template" model="mail.template">
            <field name="name">Assign verification e-mail template</field>
            <field name="subject">Verification of ${object.employee.name}</field>
            <field name="email_from">${user.email}</field>
            <field name="email_to">${object.agency.login}</field>
            <field name="report_name">${(object.resume_applicant or '').replace('/','_')}</field>
            <field name="model_id" ref="model_employee_verification"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
              <p>Dear ${object.agency.name},<p>
              <p>You have to collect the details of our employee <b> ${object.employee.name} </b> to complete the Employee Verification process.<p>
              <p>You can reply to this email if you have any questions.</p>
              <p>Thank you,</p>
            ]]>
	        </field>
        </record>
        <record id="approved_email_template" model="mail.template">
            <field name="name">Verification e-mail template</field>
            <field name="subject">Employee Verification</field>
            <field name="email_from">${user.email}</field>
            <field name="email_to">${object.employee.work_email}</field>
            <field name="model_id" ref="model_employee_verification"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
              <p>Dear ${object.employee.name},<p>
              <p>It is happy to inform you that, your employee verification process is completed and welcome to ${object.employee.address_id.name}.<p>
              <p>Thank you,</p>
            ]]>
	        </field>
        </record>

        <record id="refused_email_template" model="mail.template">
            <field name="name">Termination Letter After Verification</field>
            <field name="subject">Employee Verification</field>
            <field name="email_from">${user.email}</field>
            <field name="email_to">${object.employee.work_email}</field>
            <field name="model_id" ref="model_employee_verification"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html">
                <![CDATA[
              <p>Dear ${object.employee.name},</p>
              <p>This is to inform you that your employee verification process is completed.We regret to inform you that your employment is being terminated.</p>
              <p>This decision was reached after the completion of verification process.</p>
              <p>Thank you,</p>
              ]]>
	        </field>

        </record>
    </data>
</odoo>