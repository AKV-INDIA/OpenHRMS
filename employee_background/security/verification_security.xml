<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="agent_view_verification_security" model="ir.rule">
            <field name="name">Agent can see its own records</field>
            <field name="model_id" ref="model_employee_verification"/>
            <field name="domain_force">[('agency','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_agent'))]"/>
        </record>
        <record id="manager_view_verification_security" model="ir.rule">
            <field name="name">Manager can see its own records</field>
            <field name="model_id" ref="model_employee_verification"/>
            <field name="domain_force"></field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>
    </data>
</odoo>